{
  "name": "build-workflow",
  "version": "4.0.4",
  "description": "Simple gruntfile helper to  define build workflows",
  "main": "config-loader.js",
  "scripts": {
    "lint": "grunt check-valid",
    "changelog": "changelogx -f markdown -o ./changelog.md && git add ./changelog.md && git commit -m 'DOC: Generate Changelog'",
    "install-hooks": "prepush install && changelogx install-hook -m 160"
  },
  "prepush": [
    "grunt prepush"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/royriojas/build-workflow.git"
  },
  "keywords": [
    "grunt",
    "workflow",
    "build",
    "tasks",
    "management",
    "gruntfile"
  ],
  "author": "royriojas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/royriojas/build-workflow/issues"
  },
  "homepage": "https://github.com/royriojas/build-workflow",
  "dependencies": {
    "browserify": "^10.2.4",
    "browserify-transform-tools": "1.3.3",
    "chalk": "1.0.0",
    "coalescy": "^1.0.0",
    "console-filter": "1.0.0",
    "consoleify": "^1.0.5",
    "dispatchy": "1.0.2",
    "docco-husky-plus": "0.4.5",
    "dot": "1.0.2",
    "es6-promise": "2.0.1",
    "esbeautifier": "2.0.5",
    "eslint": "^0.21.1",
    "eslint-friendly-formatter": "1.0.5",
    "esprima-fb": "12001.1.0-dev-harmony-fb",
    "extend": "2.0.0",
    "falafel": "1.0.1",
    "file-entry-cache": "1.0.1",
    "flat-cache": "^1.0.3",
    "glob-expand": "0.1.0",
    "jscs": "1.11.3",
    "marked": "^0.3.3",
    "matchdep": "0.3.0",
    "moment": "^2.10.3",
    "reactify": "1.1.0",
    "read-file": "0.1.2",
    "require-arr": "1.0.2",
    "shimixify": "1.0.3",
    "simpless": "^1.0.9",
    "stricterify": "^1.0.3",
    "stringformat": "0.0.5",
    "time-grunt": "1.1.0",
    "twig": "0.8.1",
    "uglify-js": "2.4.17",
    "watchify": "2.6.0",
    "write": "0.1.1"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "chai-as-promised": "5.1.0",
    "chai-fuzzy": "^1.5.0",
    "changelogx": "^1.0.12",
    "grunt": "^0.4.5",
    "grunt-bump": "^0.3.0",
    "prepush": "^2.0.4"
  },
  "changelogx": {
    "ignoreRegExp": [
      "BLD: Release",
      "DOC: Generate Changelog",
      "Generated Changelog",
      "updated changelog",
      "updated the changelog",
      "BLD: Update deps"
    ],
    "issueIDRegExp": "#(\\d+)",
    "commitURL": "https://github.com/royriojas/build-workflow/commit/{0}",
    "authorURL": "https://github.com/{0}",
    "issueIDURL": "https://github.com/royriojas/build-workflow/issues/{0}",
    "projectName": "Build Workflow"
  }
}
