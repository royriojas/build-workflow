{
  "name": "build-workflow",
  "version": "6.0.0",
  "description": "Simple gruntfile helper to  define build workflows",
  "main": "config-loader.js",
  "scripts": {
    "lint": "grunt check-valid",
    "check": "grunt",
    "changelog": "changelogx -f markdown -o ./changelog.md",
    "do-changelog": "npm run changelog && git add ./changelog.md && git commit -m 'DOC: Generate changelog'",
    "install-hooks": "prepush install && changelogx install-hook",
    "pre-v": "npm run check",
    "post-v": "npm run do-changelog && git push --no-verify && git push --tags --no-verify",
    "bump-major": "npm run pre-v && npm version major -m 'BLD: Release v%s' && npm run post-v",
    "bump-minor": "npm run pre-v && npm version minor -m 'BLD: Release v%s' && npm run post-v",
    "bump-patch": "npm run pre-v && npm version patch -m 'BLD: Release v%s' && npm run post-v"
  },
  "prepush": [
    "grunt prepush"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/royriojas/build-workflow.git"
  },
  "keywords": [
    "grunt",
    "workflow",
    "build",
    "tasks",
    "management",
    "gruntfile"
  ],
  "author": "royriojas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/royriojas/build-workflow/issues"
  },
  "homepage": "https://github.com/royriojas/build-workflow",
  "dependencies": {
    "bundly": "^2.0.8",
    "chalk": "1.0.0",
    "changelogx": "^1.0.15",
    "coalescy": "^1.0.0",
    "consoleify": "^1.1.2",
    "dispatchy": "1.0.2",
    "docco-husky-plus": "0.4.5",
    "dot": "1.0.2",
    "es6-promise": "^2.3.0",
    "esbeautifier": "^4.0.1",
    "eslinter": "^2.1.0",
    "extend": "^2.0.1",
    "falafel": "^1.1.0",
    "glob-expand": "0.1.0",
    "marked": "^0.3.3",
    "matchdep": "0.3.0",
    "moment": "^2.10.3",
    "read-file": "0.1.2",
    "simpless": "^2.0.6",
    "stringformat": "0.0.5",
    "time-grunt": "1.1.0",
    "twig": "0.8.1",
    "write": "0.1.1"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "chai-as-promised": "5.1.0",
    "chai-fuzzy": "^1.5.0",
    "changelogx": "^1.0.15",
    "grunt": "^0.4.5",
    "prepush": "^3.0.4"
  },
  "changelogx": {
    "ignoreRegExp": [
      "BLD: Release",
      "DOC: Generate Changelog",
      "Generated Changelog",
      "updated changelog",
      "updated the changelog",
      "BLD: Update deps"
    ],
    "issueIDRegExp": "#(\\d+)",
    "commitURL": "https://github.com/royriojas/build-workflow/commit/{0}",
    "authorURL": "https://github.com/{0}",
    "issueIDURL": "https://github.com/royriojas/build-workflow/issues/{0}",
    "projectName": "Build Workflow"
  }
}
